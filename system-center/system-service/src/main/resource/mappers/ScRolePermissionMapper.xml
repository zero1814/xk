<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.system.mapper.ScRolePermissionMapper">
	<resultMap id="BaseResultMap" type="org.system.entity.ScRolePermission">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="uid" property="uid" jdbcType="VARCHAR" />
		<result column="role_code" property="roleCode" jdbcType="VARCHAR" />
		<result column="permission_code" property="permissionCode"
			jdbcType="VARCHAR" />
		<result column="create_user" property="createUser" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="VARCHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		id, uid, role_code, permission_code, create_user,
		create_time
	</sql>
	<select id="selectByDto" resultMap="BaseResultMap"
		parameterType="org.system.dto.ScRolePermissionDto">
		select
		<include refid="Base_Column_List" />
		from sc_role_permission
		<where>
			role_code = #{roleCode,jdbcType=VARCHAR}
			AND
			permission_code=#{permissionCode,jdbcType=VARCHAR}
		</where>
	</select>
	<delete id="deleteByDto" parameterType="java.lang.Long">
		delete from
		sc_role_permission
		<where>
			role_code = #{roleCode,jdbcType=VARCHAR}
			AND
			permission_code=#{permissionCode,jdbcType=VARCHAR}
		</where>
	</delete>
	<insert id="insert" parameterType="org.system.entity.ScRolePermission">
		insert into sc_role_permission
		<trim prefix="(" suffix=")" suffixOverrides=",">
			uid,
			role_code,
			permission_code,
			create_user,
			create_time,
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			#{uid,jdbcType=VARCHAR},
			#{roleCode,jdbcType=VARCHAR},
			#{permissionCode,jdbcType=VARCHAR},
			#{createUser,jdbcType=VARCHAR},
			STR_TO_DATE(#{createTime,jdbcType=VARCHAR},'%Y-%m-%d %H:%i:%s'),
		</trim>
	</insert>
</mapper>